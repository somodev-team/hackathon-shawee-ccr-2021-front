{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "app-components": ["src/ui/components/index.js"],
      "app-pages": ["src/ui/pages/index.js"],
      "app-constants": ["src/constants/index.js"],
      "app-hooks": ["src/hooks/index.js"],
      "app-route-manager": ["src/ui/router/route-manager.js"],
      "app-providers": ["src/providers/index.js"],
      "app-helpers": ["src/helpers/index.js"],
      "app-styles/*": ["src/ui/static/styles/*"],
      "app-images/*": ["src/ui/static/img/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}